<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:weightSum="1"
    tools:context="com.example.alpha.HEALTH_TRACKER.Primary">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="438dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/uem" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <ImageButton
        android:id="@+id/HR"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/hr1" />

    <ImageButton
        android:id="@+id/BP"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/bp1" />

    <ImageButton
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/or1" />

    <ImageButton
        android:id="@+id/About"
        android:layout_width="74dp"
        android:layout_height="82dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:scaleType="fitEnd"
        app:srcCompat="@mipmap/ab" />


</LinearLayout>
